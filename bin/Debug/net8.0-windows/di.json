        }
      ],
      "instanceScope": "single-instance"
    },
    {
      "type": "Final.Services.WeatherbitService, Final",
      "services": [
        { "type": "Final.Services.Interfaces.IWeatherService, Final" }
      ],
      "instanceScope": "single-instance"
